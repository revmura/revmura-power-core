{
  "name": "revmura/power-core",
  "type": "wordpress-plugin",
  "require": {
    "php": ">=8.3"
  },
  "autoload": {
    "psr-4": {
      "Revmura\\Core\\": "src/"
    },
    "files": [
      "src/functions.php"
    ]
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.13",
    "wp-coding-standards/wpcs": "^3.2",
    "phpcompatibility/php-compatibility": "^9.3",
    "dealerdirect/phpcodesniffer-composer-installer": "^1.1"
  },
  "scripts": {
    "lint": "vendor/bin/phpcs -q -p -s --standard=phpcs.xml.dist .",
    "lint:fix": "vendor/bin/phpcbf -p -s --standard=phpcs.xml.dist ."
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}